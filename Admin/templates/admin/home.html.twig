{% extends 'base.html.twig' %}

{% block title %}Accueil Administration{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="admin-container">
        <div class="admin-content">
            <h1>Bienvenue dans l'administration</h1>
            
            <div class="admin-menu">
                <div class="admin-menu-item">
                    <div class="menu-icon">🖼️</div>
                    <h2>Galerie d'images</h2>
                    <p>Visualisez et gérez toutes les images téléchargées</p>
                    <a href="{{ path('app_admin_list') }}" class="btn btn-primary">Voir les images</a>
                </div>
                
                <div class="admin-menu-item">
                    <div class="menu-icon">📊</div>
                    <h2>Statistiques</h2>
                    <p>Consultez les analyses et données d'utilisation</p>
                    <a href="{{ path('admin_stats') }}" class="btn btn-primary">Voir les stats</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}