{% extends 'base.html.twig' %}

{% block title %}Statistiques d'images{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4 text-uppercase">Accès Admin</h1>

    <!-- Affichage au format Graphique -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="card-title mb-0">Images les plus consultées</h2>
        </div>
        <div class="card-body">
            <button class="btn btn-success mb-3">Envoyer un mail</button>
            <canvas id="myChart" width="600" height="300"></canvas>
        </div>
    </div>

    <!-- Affichage au format Tableau -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="card-title mb-0">Statistiques sous forme de tableau</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Nombre de requêtes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for stat in imagesStats %}
                        <tr>
                            <td>{{ stat.name }}</td>
                            <td>{{ stat.hit_count }}</td>
                            <td><a href="{{ path('app_admin_list') }}" class="btn btn-primary">Accéder à l'image</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('myChart').getContext('2d');
            const myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: {{ labels|json_encode|raw }},
                    datasets: [{
                        label: 'Nombre de requêtes',
                        data: {{ data|json_encode|raw }},
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.5)',
                            'rgba(54, 162, 235, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(75, 192, 192, 0.5)',
                            'rgba(153, 102, 255, 0.5)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 20,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
